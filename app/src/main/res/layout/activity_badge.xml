<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.google.todolist.Badge"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView7"
            android:src="@mipmap/new_badge"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:src="@mipmap/latest_badge"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView9"
            android:src="@mipmap/like_badge"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Optimus Prime"
            android:id="@+id/textView24"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="center|top"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="The Flash"
            android:id="@+id/textView25"
            android:layout_below="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Avengers"
            android:id="@+id/textView26"
            android:layout_above="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 likes completed"
            android:id="@+id/text1"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="center|top" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 likes completed"
            android:id="@+id/text2"
            android:layout_below="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 likes completed"
            android:id="@+id/textView3"
            android:layout_above="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:src="@mipmap/number1_badge"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:src="@mipmap/star_badge"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/first33"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/imageView5"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Optimus Prime"
            android:id="@+id/textView18"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="center|top" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="The Flash"
            android:id="@+id/textView22"
            android:layout_below="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Avengers"
            android:id="@+id/textView20"
            android:layout_above="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 likes completed"
            android:id="@+id/textView29"
            android:layout_below="@+id/textView28"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 likes completed"
            android:id="@+id/textView23"
            android:layout_below="@+id/textView22"
            android:layout_alignParentEnd="true"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 likes completed"
            android:id="@+id/textView19"
            android:layout_below="@+id/textView18"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
